      <h2
        class="cms-text-light text-[3.125rem] text-center leading-none lg:text-[4.2088rem] tracking-tighter max-w-[25ch] js-servicos-title font-inst"
      >
        {title}
      </h2>

      <p
        class="cms-text-light text-base text-center max-w-[50ch] leading-tight js-servicos-desc"
      >
        {description}
      </p>

      <nav
        class="flex items-center justify-center gap-6 flex-wrap js-servicos-item"
      >
        {
          categories.map((item) => (
            <p class="cms-text-dark text-[1.3125rem] px-6 py-2 leading-none rounded-full cms-bg-light font-inst">
              {item.category}
            </p>
          ))
        }
      </nav>
    </header>

