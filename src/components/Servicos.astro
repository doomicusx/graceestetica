                href={ctaLink}
                class="group w-fit inline-flex items-center gap-1.5 px-4 py-3 rounded-full cms-bg-dark cms-text-light font-inst text-[1.3125rem] leading-none tracking-tighter transition-colors duration-500 ease-in-out hover-cms-bg-dark hover-cms-text-light"
              >
                <svg
                  aria-hidden="true"
                  focusable="false"
                  viewBox="0 0 12 14"
                  class="size-5 transition-transform duration-1000 ease-in-out group-hover-rotate-360 motion-reduce:transform-none"
                >
