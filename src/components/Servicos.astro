      {
        cards.map((card) => (
          <article class="flex flex-col gap-4 js-servicos-item">
            <figure class="w-full overflow-hidden rounded-t-2xl h-61.5">
              <img
                src={card.image}
                alt={card.imageAlt}
                class="w-full h-full object-cover"
              />
            </figure>

            <div class="cms-bg-light rounded-b-2xl p-10 flex flex-col gap-6">
              {card.services.map((item) => (
                <div class="flex flex-col lg:flex-row gap-5 lg:gap-0 lg:items-end lg:justify-between border-b cms-border-custom-opacity pb-4">
                  <div class="cms-text-dark flex flex-col gap-3">
                    <h3 class="font-inst leading-none text-[1.7769rem] max-w-[30ch]">
                      {item.title}
                    </h3>
                    <p class="text-base leading-tight max-w-[25ch]">
                      {item.description}
                    </p>
                  </div>

                  <ul class="flex gap-2">
                    <li class="font-inst border cms-border-dark rounded-full py-1.5 px-4 cms-text-dark">
                      {item.duration}
                    </li>
                    <li class="font-inst border cms-border-dark rounded-full py-1.5 px-4 cms-text-dark">
                      {item.price}
                    </li>
                  </ul>
                </div>
              ))}

