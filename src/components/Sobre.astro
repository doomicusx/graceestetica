---
const { title, stat1, stat2, stat3, stat4, sobreIcon } = Astro.props;
---

<section class="container mx-auto px-2 py-24 js-sobre" id="sobre">
  <div class="font-inst flex flex-col items-center justify-center gap-12">
    <div class="flex flex-col gap-4 items-center">
      <span class="block js-sobre-item">
        {
          sobreIcon ? (
            <img
              src={sobreIcon}
              alt=""
              class="max-w-16 js-sobre-decorativo object-contain"
              loading="lazy"
            />
          ) : (
            <img
              src="/images/sobreIcon.svg"
              alt=""
              class="max-w-16 js-sobre-decorativo object-contain"
              loading="lazy"
            />
          )
        }
      </span>

      <h2
        class="text-[2.3687rem] cms-text-dark js-sobre-title text-center lg:text-[3.125rem] max-w-[50ch] leading-none tracking-tighter"
      >
        {title}
      </h2>
    </div>

    <ul
      class="text-[1.3125rem] cms-text-dark flex flex-wrap items-center justify-center gap-8"
    >
      <li>
        <p class="js-sobre-item">{stat1}</p>
      </li>

      <span class="hidden lg:block js-sobre-item">
        <svg
          aria-hidden="true"
          focusable="false"
          viewBox="0 0 12 14"
          class="size-5 transition-transform duration-1200 ease-in-out group-hover:rotate-360 motion-reduce:transform-none"
